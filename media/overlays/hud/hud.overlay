    }
  }

  container Panel(eyeholeHUD)
  {
    metrics_mode pixels
    left 640
    top 360
    width 36
    height 36
    horz_align left
    vert_align top
    material eyeholeMaterial
  }

  container Panel(timerHUD)
  {
    metrics_mode pixels
    left -426
    top 75
    width 376
    height 80
    horz_align right
    vert_align top
    material timerMaterial

    element TextArea(timerTextArea) : MyTemplates/Text
    {
      top 9
      left 225
    }
  }

}
